<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administrate NOVA Video</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"] == true)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                @Html.ActionLink("NOVA Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "MoviesAdministration" ? "active" : "")">
                            @Html.ActionLink("Movies", "Index", "MoviesAdministration", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "UserAdministration" ? "active" : "")">
                            @Html.ActionLink("Customers", "Index", "CustomerAdministration", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminUserAdministration" ? "active" : "")">
                            @Html.ActionLink("Admins", "Index", "AdminUserAdministration", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminUserAdministration" ? "active" : "")">
                            @Html.ActionLink("DB Log", "Index", "LogAdministration", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Log out", "LogOut", "Home", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/site-scripts.js"></script>
</body>
</html>
