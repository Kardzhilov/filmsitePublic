@model List<Model.ViewModels.MovieOrderViewModel>

@{
    ViewBag.Title = "Movie Order for ";
}

<div class="row site-navbar-bumper padding-bottom">
    <div class="col-md-12 page-header-wrapper">
        <h1>@ViewBag.Title</h1>
    </div>
</div>

<div class="row bg-dark admin-list-row admin-list-row-header">
    <div class="col-md-6">
        Title
    </div>
    <div class="col-md-4 flex-end-sm">
        Rental start
    </div>
</div>

@foreach (var entry in Model)
{
    <div class="row admin-list-row">
        <div class="col-6 col-md-6">
            <strong>@entry.RentedMovie.Title</strong>
        </div>
        <div class="col-6 col-md-4 flex-end-sm">
            @entry.RentalStartTimeStamp
        </div>
        <div class="col-12 col-md-2 btn-cell">
            <button class="btn btn-danger btn-full-width delete-movie" data-id="@entry.ID" data-action="Delete" data-controller="MoviesOrderAdministration">Delete</button>
        </div>
    </div>
}

@if (Model.Count() == 0)
{
    <div class="row admin-list-row">
        <div class="col-12">
            <strong>
                The user has no orderes yet.
            </strong>
        </div>
    </div>
}